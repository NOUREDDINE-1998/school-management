@model IEnumerable<SchoolManagement.Models.Inscription>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Inscription des Etudiants</h2>
<br />

<p>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Create","Inscription")'">ajouter Inscription</button>
</p>
<br />
<table class="table table-hover table-responsive table-bordered" id="inscription">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Etudiant.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filliere.Libelle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateInscription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnneeScolaire)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NiveauScolarite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categorie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NiveauFormation)
            </th>
            <th>Modifier</th>
            <th>Details</th>
            <th>Supprimer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Etudiant.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Filliere.Libelle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateInscription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnneeScolaire)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NiveauScolarite)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categorie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NiveauFormation)
                </td>
                <td>
                    @Html.ActionLink("Modifier", "Edit", new { id = item.Id })
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
                <td>
                    @Html.ActionLink("Supprimer", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts{
    <script>
        $(document).ready(function () {
            var table = $("#inscription").DataTable();

        });
    </script>
}