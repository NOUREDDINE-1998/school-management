@model IEnumerable<SchoolManagement.Models.paiement>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>le paiement </h2>
<br />

<p>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("create","paiement")'">Ajouter Paiement</button>
</p>
<br />
<table class="table table-hover table-responsive table-bordered" id="paiement">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Etudiant.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeReglement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypePaiement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DureeEnMois)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Montant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatePaiment)
            </th>
            <th>Modifier</th>
            <th>Details</th>
            <th>Supprimer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Etudiant.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypeReglement)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypePaiement)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DureeEnMois)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Montant)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DatePaiment)
                </td>
                <td>
                    @Html.ActionLink("Modifier", "Edit", new { id = item.Id })
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
                <td>
                    @Html.ActionLink("Supprimer", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts{
    <script>
        $(document).ready(function () {
            var table = $("#paiement").DataTable();

        });
    </script>
}