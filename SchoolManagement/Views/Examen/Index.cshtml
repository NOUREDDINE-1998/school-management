@model IEnumerable<SchoolManagement.Models.Examen>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>La liste de types des examens</h2>

<p>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("create","Examen")'">Ajouter Examen</button>
</p>
<br />
<table class="table table-hover table-responsive table-bordered" id="examens">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Classe.Libelle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Module.Libelle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeExamen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateExam)
            </th>
            <th>Modifier</th>
            <th>Details</th>
            <th>Supprimer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Classe.Libelle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Module.Libelle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeExamen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateExam)
            </td>
            <td>
                @Html.ActionLink("Modifier", "Edit", new { id = item.Id })
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
            <td>
                @Html.ActionLink("Supprimer", "Delete", new { id = item.Id })
            </td>
        </tr>
        }
    </tbody>
</table>
@section scripts{
    <script>
        $(document).ready(function () {
            var table = $("#examens").DataTable();

        });
    </script>
}